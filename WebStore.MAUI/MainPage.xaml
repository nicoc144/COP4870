<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebStore.MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                    Text="Inventory"
                    Clicked="InvClicked"
                    />
                    <Button Grid.Column="1"
                    Text="Shop"
                    Clicked="ShopClicked"
                    />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
